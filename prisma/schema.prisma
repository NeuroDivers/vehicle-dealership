// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Vehicle {
  id          String   @id @default(cuid())
  make        String
  model       String
  year        Int
  price       Float
  odometer    Int
  bodyType    String
  color       String
  fuelType    String   @default("gasoline") // gasoline, diesel, electric, hybrid, plugin-hybrid
  description String?
  images      String   @default("[]") // JSON array of image URLs
  isSold      Boolean  @default(false)
  
  // Partner tracking fields
  source      String   @default("internal") // internal, lambert, partner
  partnerName String?  // e.g., "Automobile Lambert"
  partnerUrl  String?  // Original URL on partner site
  partnerVin  String?  // VIN from partner
  partnerStock String? // Stock number from partner
  lastSynced  DateTime? // Last sync from partner
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model SiteSettings {
  id          String   @id @default(cuid())
  aiSettings  String   @default("{}") // JSON object for AI configuration
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
