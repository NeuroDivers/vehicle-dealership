# Analytics Configuration
# Set to 'true' to use D1 database, 'false' for local in-memory storage
NEXT_PUBLIC_USE_D1_ANALYTICS=false

# D1 Analytics API URL (set this after deploying the analytics worker)
NEXT_PUBLIC_ANALYTICS_API_URL=https://vehicle-dealership-analytics.your-subdomain.workers.dev

# Existing environment variables
NEXTAUTH_SECRET=your-secret-key-here
NEXTAUTH_URL=http://localhost:3000

# Database
DATABASE_URL="file:./dev.db"

# Zoho Email Configuration (optional)
ZOHO_CLIENT_ID=your-zoho-client-id
ZOHO_CLIENT_SECRET=your-zoho-client-secret
ZOHO_REFRESH_TOKEN=your-zoho-refresh-token
ZOHO_FROM_EMAIL=your-email@yourdomain.com

# Site Configuration
SITE_NAME="Auto Dealership"
SITE_URL=http://localhost:3000
